<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".BubbleSortActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bubble Sort"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="@drawable/layout_border"
        android:backgroundTint="#00C853"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/bubbleDefination"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="10dp"
        android:background="@drawable/layout_border"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/bubble_pseudo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/bubble_time_complexity"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="10dp"
        android:background="@drawable/layout_border"
        />
    <Button
        android:id="@+id/btnBubbleVisualize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#C51162"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="Visualize Bubble Sort"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        />


</LinearLayout>